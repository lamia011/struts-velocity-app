<toolbox>
    <tool>
        <key>alternator</key>
        <class>org.apache.velocity.tools.generic.AlternatorTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>esc</key>
        <class>org.apache.velocity.tools.generic.EscapeTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>sorter</key>
        <class>org.apache.velocity.tools.generic.SortTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>class</key>
        <class>org.apache.velocity.tools.generic.ClassTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>date</key>
        <class>org.apache.velocity.tools.generic.ComparisonDateTool</class>
        <scope>application</scope>
        <parameter name="format" value="yyyy-MM-dd"/>
        <parameter name="bundle" value="org.apache.velocity.tools.generic.times"/>
        <parameter name="depth" value="1"/>
        <parameter name="skip" value="month,week,millisecond"/>
    </tool>
    <tool>
        <key>convert</key>
        <class>org.apache.velocity.tools.generic.ConversionTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>display</key>
        <class>org.apache.velocity.tools.generic.DisplayTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>field</key>
        <class>org.apache.velocity.tools.generic.FieldTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>math</key>
        <class>org.apache.velocity.tools.generic.MathTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>number</key>
        <class>org.apache.velocity.tools.generic.NumberTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>text</key>
        <class>org.apache.velocity.tools.generic.ResourceTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>xml</key>
        <class>org.apache.velocity.tools.generic.XmlTool</class>
        <scope>application</scope>
    </tool>
    <tool>
        <key>context</key>
        <class>org.apache.velocity.tools.generic.ContextTool</class>
        <scope>request</scope>
    </tool>
    <tool>
        <key>link</key>
        <class>org.apache.velocity.tools.generic.LinkTool</class>
        <scope>request</scope>
    </tool>
    <tool>
        <key>loop</key>
        <class>org.apache.velocity.tools.generic.LoopTool</class>
        <scope>request</scope>
    </tool>
    <tool>
        <key>render</key>
        <class>org.apache.velocity.tools.generic.RenderTool</class>
        <scope>request</scope>
    </tool>


</toolbox>

